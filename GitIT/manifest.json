{
  "name": "GitHub Auth Sample",
  "version": "1.0",
  "manifest_version": 2,
  "description": "An extension which makes it easier to sync your code with GitHub",
  "options_page": "options.html",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage",
    "identity",
    "https://github.com/"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://leetcode.com/*"
      ],
      "css":[
        "font-awesome.min.css",
        "file-explore.css"
      ],
      "js": [
        "jquery-3.5.1.min.js"
      ]
    }
  ],
  "oauth2": {
    "client_id": "Iv1.cf032acb41714b4e",
    "scopes": [
      "https://github.com/login/oauth/authorize"
    ]
  },
  "content_security_policy": "script-src https://*.google.com 'self' 'unsafe-eval'; object-src 'self'",
  "web_accessible_resources": [
    "images/*",
    "font-awesome.min.css",
    "fonts/FontAwesome.otf",
    "fonts/fontawesome-webfont.eot",
    "fonts/fontawesome-webfont.svg",
    "fonts/fontawesome-webfont.ttf",
    "fonts/fontawesome-webfont.woff",
    "fonts/fontawesome-webfont.woff2",
    "file-explore.css"
  ],
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
          "16": "images/ivp16.png",
          "32": "images/ivp32.png",
          "48": "images/ivp48.png",
          "128": "images/ivp128.png"
        }
  },
  "icons": {
    "16": "images/ivp16.png",
    "32": "images/ivp32.png",
    "48": "images/ivp48.png",
    "128": "images/ivp128.png"
  }
}